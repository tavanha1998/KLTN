@model KLTN.Areas.Admin.Models.DeTaiNghienCuuAdminViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <button class="btn btn-success">Xuất báo cáo tổng quát</button>
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-12">
                <div class="card card-primary">

                    @*CARD HEADER*@
                    <div class="card-header">
                        <h3 class="card-title">Danh sách đề tài trong đợt đăng ký học kỳ... năm... (thời gian bắt đầu - thời gian kết thúc) </h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    @*CARD BODY*@
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-hover dataTable table-sm nowrap" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th tabindex="0" aria-controls="example1" rowspan="1">
                                        Mã đề tài
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                                        Tên đề tài
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                                        Mô tả
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                                        Tệp đính kèm
                                    </th>
                                    <th class="sorting_desc" tabindex="0" aria-controls="example1" rowspan="1">
                                        Ngày lập
                                    </th>
                                    <th class="sorting_desc" tabindex="0" aria-controls="example1" rowspan="1">
                                        Giảng viên
                                    </th>
                                    <th tabindex="0" aria-controls="example1" rowspan="1">
                                        Tình trạng
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model.listDeTaiHienTai)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.TenDeTai</td>
                                    <td>@item.MoTa</td>
                                    <td><a href="~/FileUpload/DeTaiNghienCuu/@item.TepDinhKem" download="@item.TepDinhKem">@item.TenTep</a></td>
                                    <td>@item.NgayLap.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@(item.IdgiangVienNavigation.Ho + " " + item.IdgiangVienNavigation.Ten)</td>

                                    @if (item.TinhTrangDeTai == 3)
                                    {
                                        <td>Đã đăng ký</td>
                                    }
                                    else
                                    {
                                        <td>Chưa đăng ký</td>
                                    }
                                    <td><button class="btn btn-success btn-sm"><i class="fas fa-download"></i></button></td>
                                </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card card-warning">
                    @*CARD HEADER*@
                    <div class="card-header">
                        <h3 class="card-title">Danh sách đề tài đề xuất</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    @*CARD BODY*@
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover dataTable table-sm nowrap" style="width:100%" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th tabindex="0" aria-controls="example1" rowspan="1">
                                        Mã đề tài
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                                        Tên đề tài
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                                        Mô tả
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                                        Tệp đính kèm
                                    </th>
                                    <th class="sorting_desc" tabindex="0" aria-controls="example1" rowspan="1">
                                        Ngày lập
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                                        MSSV đề xuất
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1">
                                        Giảng viên
                                    </th>

                                    <th tabindex="0" aria-controls="example1" rowspan="1">
                                        Tình trạng
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.listDeTaiDeXuatHienTai)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.TenDeTai</td>
                                        <td>@item.MoTa</td>
                                        <td><a href="~/FileUpload/DeTaiNghienCuu/@item.TepDinhKem" download="@item.TepDinhKem">@item.TenTep</a></td>
                                        <td>@item.NgayLap.Value.ToString("dd/MM/yyyy")</td>
                                        <td>@item.IdNguoiDangKy.</td>
                                        <td>@(item.IdgiangVienNavigation.Ho + " " + item.IdgiangVienNavigation.Ten)</td>

                                        @if (item.TinhTrangDeTai == 3)
                                        {
                                            <td>Đã đăng ký</td>
                                        }
                                        else
                                        {
                                            <td>Chưa đăng ký</td>
                                        }
                                        <td><button class="btn btn-success btn-sm"><i class="fas fa-download"></i></button></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>