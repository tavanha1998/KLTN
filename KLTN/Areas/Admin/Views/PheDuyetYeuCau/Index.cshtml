@*@model IEnumerable<DeTaiNghienCuu>*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Script{ 
    <script src="~/Resources/Admin/PheDuyetYeuCau.js"></script>
}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">

                    @*CARD HEADER*@
                    <div class="card-header">
                        <h3 class="card-title">Danh sách yêu cầu</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    @*CARD BODY*@
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-hover dataTable table-sm nowrap" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Mã đề tài
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Tên đề tài
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Mô tả
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Tệp mô tả
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Tên giảng viên
                                    </th>
                                    <th class="sorting_desc" tabindex="0" aria-controls="example1">
                                        Yêu cầu
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Ngày yêu cầu
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Người phê duyệt
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Xử lý
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card card-warning">
                    @*CARD HEADER*@
                    <div class="card-header">
                        <h3 class="card-title">Danh sách đề tài dự kiến mở</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    @*CARD BODY*@
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover dataTable table-sm nowrap" style="width:100%" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Mã đề tài
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Tên đề tài
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Mô tả
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Tệp mô tả
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1">
                                        Tên giảng viên
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="ThongTinEdit">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Yều cầu chỉnh sửa đề tài</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="ConfirmDelete">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Xác nhận từ chối yêu cầu?</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="btnXoa">Đồng ý</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>
                </div>

            </div>
        </div>
    </div>