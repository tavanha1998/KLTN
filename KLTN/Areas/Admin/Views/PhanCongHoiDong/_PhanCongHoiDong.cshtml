@model IEnumerable<Data.Models.DeTaiNghienCuu>

@if (Model.Any())
{<div class="form-group">
        @*<label>Danh sách đề tài chưa phân công</label>*@
        <select class="duallistbox" multiple="multiple">
            @foreach (var item in Model)
            {
                if (item.XetDuyetVaDanhGia.LastOrDefault()!=null && item.XetDuyetVaDanhGia.LastOrDefault().Status == 1)
                {
                    <option selected value="@item.Id">@item.Id - @item.TenDeTai (@item.IdgiangVienNavigation.Ho  @item.IdgiangVienNavigation.Ten)</option>
                }
                else
                {
                    <option value="@item.Id">@item.Id - @item.TenDeTai (@item.IdgiangVienNavigation.Ho  @item.IdgiangVienNavigation.Ten)</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-warning btnPhanCong" disabled>Phân công</button>
    </div>
}
else
{
    <div class="text-center">Chưa có đề tài để phân công</div>
}
