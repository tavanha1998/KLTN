@model Data.Models.SinhVien

<div class="row text-blue text-bold justify-content-center">Hoàn tất đăng ký</div>
<div class="row">
    <label class="col">MSSV: </label>
    <div class="col">@Model.Mssv</div>
</div>
<div class="row">
    <label class="col">Họ tên: </label>
    <div class="col">@Model.Ho @Model.Ten</div>
</div>
<div class="row">
    <label class="col">Ngày sinh: </label>
    <div class="col">@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "")</div>
</div>
<div class="row">
    <label class="col">SĐT: </label>
    <div class="col">@Model.Sdt</div>
</div>
<div class="row">
    <label class="col">Email: </label>
    <div class="col">@Model.Email</div>
</div>
<div class="row justify-content-center">
    <button class="btn btn-danger btn-sm btnHuyNhom">Hủy nhóm</button>
</div>
