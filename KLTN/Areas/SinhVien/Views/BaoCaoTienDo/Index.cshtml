
@section Script{
    <script src="~/Resources/SinhVien/BaoCaoTienDo.js">
    </script>
    <script>
        //// func
        var EditAction = function (id) {
            url = "/SinhVien/BaoCaoTienDo/CreateEdit/" + id;
            $('#modal-lg .modal-body').html('');
            $('#modal-lg .titleHeader').html('Chỉnh sửa báo cáo');
            $.get(url, function (data) {
                $('#modal-lg .modal-body').html(data);
                $('#modal-lg').modal();
            });
        }

        var CreateAction = function () {
            url = "/SinhVien/BaoCaoTienDo/CreateEdit/";
            $('#modal-lg .modal-body').html('');
            $('#modal-lg .titleHeader').html('Tạo báo cáo');
            $.get(url, function (data) {
                $('#modal-lg .modal-body').html(data);
                $('#modal-lg').modal();
            })
        }
    </script>
}
@if (ViewBag.Check == true)
{<div class="content-header">
    <div class="row">
        <h1 class="col text-center">Báo cáo tiến độ đề tài</h1>
    </div>

    <div class="row">
        <h5 class="col text-center">@ViewBag.TenDeTai</h5>
    </div>
    <hr />
</div>

@await Component.InvokeAsync("ListBaoCao")
}
else
{
    <div class="text-primary text-center text-bold"><h2>Bạn chưa đăng ký đề tài</h2></div>
}

<input value="@ViewBag.IdDeTai" id="valueIdDeTai" hidden/>

