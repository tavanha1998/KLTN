@model List<Data.Models.BaoCaoTienDo>
<div class="card">
    <div class="card-body">
            <table class="table table-bordered table-hover dataTable table-sm" role="grid" aria-describedby="example1_info">
                <thead>
                    <tr role="row">
                        <th >
                            STT
                        </th>
                        <th >
                            Ngày nộp
                        </th>
                        <th >
                            Tuần nộp
                        </th>
                        <th >
                            Nội dung
                        </th>
                        <th >
                            Tệp báo cáo
                        </th>
                        <th>
                            Đánh giá
                        </th>
                        <th>Tiến độ</th>
                        <th>Tình trạng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.NgayNop.Value.ToString("dd/MM/yyyy")</td>
                                <td>@item.TuanDaNop</td>
                                <td>@item.NoiDung</td>
                                <td><a href="/../../FileUpload/BaoCaoTienDo/@item.TepDinhKem" download="@item.TepDinhKem">@item.TenTep</a></td>
                                <td>@item.DanhGia</td>
                                <td>@item.TienDo</td>
                                @if (item.Status == 0)
                                {
                                    <td>Trễ hạn</td>
                                }
                                else
                                {<td>Đã nộp</td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>

            </table>
    </div>
</div>



